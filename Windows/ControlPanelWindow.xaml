<Window x:Class="CrosshairOverlay.Windows.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CrosshairOverlay.Converters"
        xmlns:controls="clr-namespace:CrosshairOverlay.Controls"
        Title="X-Aim"
        Width="750" Height="800"
        MinWidth="450" MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#1A1A1A"
        Icon="/Assets/logo.png">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Accent color -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF8C00"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#FFA500"/>
        
        <!-- Tab button style -->
        <Style x:Key="TabButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" 
                                BorderThickness="0,0,0,2" BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FF8C00"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Shape button style -->
        <Style x:Key="ShapeButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="#252525" CornerRadius="8"
                                BorderThickness="2" BorderBrush="#333333">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ContentPresenter HorizontalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,5,0,0"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C00"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF8C00"/>
                                <Setter TargetName="border" Property="Background" Value="#2D2518"/>
                                <Setter Property="Foreground" Value="#FF8C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Slider style with orange accent -->
        <Style TargetType="Slider">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="0,5,10,5"/>
        </Style>
        
        <!-- Number input style -->
        <Style x:Key="NumberInput" TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <!-- Label style -->
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="90"/>
        </Style>
        
        <!-- Section header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Action button style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary action button -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#FF8C00"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFA500"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Color preset button -->
        <Style x:Key="ColorPreset" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" BorderThickness="2" BorderBrush="Transparent"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Checkbox style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Toggle Switch style -->
        <Style x:Key="ToggleSwitch" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="track" Background="#333333" CornerRadius="11" 
                                    BorderThickness="0"/>
                            <Ellipse x:Name="thumb" Width="18" Height="18" Fill="#888888"
                                     HorizontalAlignment="Left" Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#FF8C00"/>
                                <Setter TargetName="thumb" Property="Fill" Value="#FFFFFF"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumb" Property="Fill" Value="#AAAAAA"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="thumb" Property="Fill" Value="#FFFFFF"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Toggle Button -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#252525" 
                        BorderBrush="#444444" BorderThickness="1" CornerRadius="4"/>
                <Border Grid.Column="0" Background="Transparent" Margin="1"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#888888" HorizontalAlignment="Center" 
                      VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#FF8C00"/>
                    <Setter TargetName="Arrow" Property="Fill" Value="#FF8C00"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <!-- ComboBox style -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False" ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="10,3,30,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <Border x:Name="DropDownBorder" Background="#252525" 
                                            BorderThickness="1" BorderBrush="#444444" CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox item style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}" CornerRadius="3">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF8C00"/>
                                <Setter Property="Foreground" Value="#000000"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3D3D3D"/>
                                <Setter Property="Foreground" Value="#FF8C00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#0D0D0D" Padding="20,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/logo.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="X-Aim" FontSize="16" Foreground="#FFFFFF" 
                               FontFamily="Segoe UI" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Profile dropdown -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Profile:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="120" ItemsSource="{Binding Presets}" 
                              SelectedItem="{Binding SelectedPreset}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Tab bar -->
        <Border Grid.Row="1" Background="#151515">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="TabShape" Content="Shape" Style="{StaticResource TabButton}" IsChecked="True" GroupName="Tabs"/>
                <RadioButton x:Name="TabColor" Content="Color" Style="{StaticResource TabButton}" GroupName="Tabs"/>
                <RadioButton x:Name="TabProfiles" Content="Profiles" Style="{StaticResource TabButton}" GroupName="Tabs"/>
            </StackPanel>
        </Border>
        
        <!-- Main content area -->
        <Border Grid.Row="2">
            <Grid>
                
                <!-- TAB 1: Shape -->
                <ScrollViewer x:Name="PanelShape" Visibility="Visible" 
                              VerticalScrollBarVisibility="Auto" Padding="25,20">
                    <StackPanel>
                        <TextBlock Text="CROSSHAIR SHAPE" Style="{StaticResource SectionHeader}"/>
                        
                        <WrapPanel Margin="0,0,0,20">
                            <ToggleButton Style="{StaticResource ShapeButton}" Tag="Circle" 
                                          IsChecked="{Binding ShowCircle}">
                                <Ellipse Width="24" Height="24" Stroke="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Foreground}" StrokeThickness="2"/>
                            </ToggleButton>
                            <ToggleButton Style="{StaticResource ShapeButton}" Tag="Dot"
                                          IsChecked="{Binding ShowDot}">
                                <Ellipse Width="12" Height="12" Fill="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Foreground}"/>
                            </ToggleButton>
                            <ToggleButton Style="{StaticResource ShapeButton}" Tag="T-Shape"
                                          IsChecked="{Binding ShowTShape}">
                                <TextBlock Text="âŠ¤" FontSize="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Foreground}"/>
                            </ToggleButton>
                        </WrapPanel>
                        
                        <TextBlock Text="LINE VISIBILITY" Style="{StaticResource SectionHeader}" Margin="0,5,0,10"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Horizontal Lines" Foreground="#CCCCCC" FontSize="13" VerticalAlignment="Center"/>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="{Binding ShowHorizontalLines}"/>
                        </Grid>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Vertical Lines" Foreground="#CCCCCC" FontSize="13" VerticalAlignment="Center"/>
                            <ToggleButton Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="{Binding ShowVerticalLines}"/>
                        </Grid>
                        
                        <TextBlock Text="SIZE SETTINGS" Style="{StaticResource SectionHeader}" Margin="0,5,0,15"/>
                        
                        <!-- Length -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Length:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="1" Maximum="100" Value="{Binding Size}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding Size, StringFormat='{}{0:F0}'}"/>
                        </Grid>
                        
                        <!-- Thickness -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Thickness:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="1" Maximum="20" Value="{Binding Thickness}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding Thickness, StringFormat='{}{0:F0}'}"/>
                        </Grid>
                        
                        <!-- Gap/Offset -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gap:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="0" Maximum="50" Value="{Binding Gap}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding Gap, StringFormat='{}{0:F0}'}"/>
                        </Grid>
                        
                        <!-- Opacity -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Opacity:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="10" Maximum="100" Value="{Binding OpacityPercent}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding OpacityPercent, StringFormat='{}{0:F0}%'}"/>
                        </Grid>
                        
                        <!-- Dot Size (shown only when dot is enabled) -->
                        <Grid Margin="0,5,0,8" Visibility="{Binding ShowDot, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Dot Size:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="1" Maximum="20" Value="{Binding DotSize}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding DotSize, StringFormat='{}{0:F0}'}"/>
                        </Grid>
                        
                        <!-- Circle Radius (shown only when circle is enabled) -->
                        <Grid Margin="0,5,0,8" Visibility="{Binding ShowCircle, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Radius:" Style="{StaticResource SettingLabel}"/>
                            <Slider Grid.Column="1" Minimum="5" Maximum="100" Value="{Binding CircleRadius}"/>
                            <TextBox Grid.Column="2" Style="{StaticResource NumberInput}" 
                                     Text="{Binding CircleRadius, StringFormat='{}{0:F0}'}"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- TAB 2: Color -->
                <ScrollViewer x:Name="PanelColor" Visibility="Collapsed" 
                              VerticalScrollBarVisibility="Auto" Padding="25,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="COLOR PICKER" Style="{StaticResource SectionHeader}" HorizontalAlignment="Center"/>
                        
                        <!-- HSV Color Picker with integrated preview -->
                        <controls:ColorPickerControl x:Name="ColorPicker" 
                                                     SelectedColor="{Binding PreviewColor, Mode=OneWay}"
                                                     SelectedColorChanged="ColorPicker_SelectedColorChanged"
                                                     HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        
                        <!-- HEX Input -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <TextBlock Text="HEX:" Foreground="#888888" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Text="{Binding ColorHex, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource NumberInput}" Width="80" TextAlignment="Center"
                                     FontFamily="Consolas" FontSize="13"/>
                        </StackPanel>
                        
                        <TextBlock Text="QUICK COLORS" Style="{StaticResource SectionHeader}" Margin="0,5,0,10" HorizontalAlignment="Center"/>
                        <WrapPanel Margin="0,0,0,0" HorizontalAlignment="Center">
                            <Button Style="{StaticResource ColorPreset}" Background="#FF8C00" Click="ColorButton_Click" Tag="#FF8C00"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#00FF00" Click="ColorButton_Click" Tag="#00FF00"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#FF0000" Click="ColorButton_Click" Tag="#FF0000"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#00FFFF" Click="ColorButton_Click" Tag="#00FFFF"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#FFFF00" Click="ColorButton_Click" Tag="#FFFF00"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#FF00FF" Click="ColorButton_Click" Tag="#FF00FF"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#FFFFFF" Click="ColorButton_Click" Tag="#FFFFFF"/>
                            <Button Style="{StaticResource ColorPreset}" Background="#000000" Click="ColorButton_Click" Tag="#000000"/>
                        </WrapPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- TAB 3: Profiles -->
                <ScrollViewer x:Name="PanelProfiles" Visibility="Collapsed" 
                              VerticalScrollBarVisibility="Auto" Padding="25,20">
                    <StackPanel>
                        <!-- Load Profiles Section -->
                        <Border Background="#252525" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="LOAD PROFILE" Style="{StaticResource SectionHeader}" Margin="0"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Grid.Column="0" 
                                              ItemsSource="{Binding Presets}" 
                                              SelectedItem="{Binding SelectedPreset}"
                                              Height="40" FontSize="14">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" Padding="5,2"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="âœ“ Load" 
                                                Command="{Binding LoadPresetCommand}"
                                                Style="{StaticResource PrimaryButton}" 
                                                Margin="10,0,0,0" Padding="20,10" FontSize="13"/>
                                        
                                        <Button Content="ðŸ—‘ Delete" 
                                                Command="{Binding DeletePresetCommand}"
                                                Style="{StaticResource ActionButton}" 
                                                Margin="10,0,0,0" Padding="20,10" FontSize="13"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Save New Profile Section -->
                        <Border Background="#252525" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="ðŸ’¾" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="SAVE NEW PROFILE" Style="{StaticResource SectionHeader}" Margin="0"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding NewPresetName, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource NumberInput}" 
                                             TextAlignment="Left" Height="40" FontSize="14"
                                             VerticalContentAlignment="Center" Padding="10,0"
                                             MinWidth="200"/>
                                    
                                    <Button Grid.Column="1" Content="ðŸ’¾ Save" 
                                            Command="{Binding SavePresetCommand}" 
                                            Style="{StaticResource PrimaryButton}" 
                                            Margin="10,0,0,0" Padding="20,10" FontSize="13"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Tips Section -->
                        <Border Background="#1F1F1F" CornerRadius="8" Padding="15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¡" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Text="Profiles save all your crosshair settings including shape, size, color, and visibility options for quick loading later." 
                                           Foreground="#888888" FontSize="12" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="3" Background="#0D0D0D" Padding="20,0">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Enable Crosshair" Foreground="#CCCCCC" FontSize="13" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ToggleButton Style="{StaticResource ToggleSwitch}" IsChecked="{Binding CrosshairEnabled}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Reset" Style="{StaticResource ActionButton}" Margin="0,0,10,0"
                            Click="ResetButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
